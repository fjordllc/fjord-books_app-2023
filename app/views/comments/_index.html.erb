<h3>comments</h3>
<% commentable.comments.each do |comment| %>
	<%= comment.content %>
	<br>
	<%= User.find(comment.user_id).name == "" ? User.find(comment.user_id).email : User.find(comment.user_id).name %>
	<%= comment.created_at %>
	<% if comment.user_id == current_user.id %>
		<%= button_to "Destroy", polymorphic_path([commentable, comment]), method: :delete %>
	<% end %>
	<br>
	<br>
<% end %>
